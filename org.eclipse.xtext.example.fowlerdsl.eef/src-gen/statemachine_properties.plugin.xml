<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

 <plugin>

  <!-- EEF extensions -->
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://www.eclipse.org/xtext/example/fowlerdsl/Statemachine"
            class="org.eclipse.xtext.example.fowlerdsl.statemachine.providers.StatemachineEEFAdapterFactory"
            supportedTypes="org.eclipse.emf.eef.runtime.providers.PropertiesEditingProvider"/>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.eclipse.xtext.example.fowlerdsl.statemachine.providers.StatemachinePropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>

   <!-- Tabbed properties views extension -->
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.xtext.example.fowlerdsl.statemachine.properties">
         <propertyCategory
               category="default">
         </propertyCategory>
         <propertyCategory
               category="extended">
         </propertyCategory>
         <propertyCategory
               category="advanced">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.xtext.example.fowlerdsl.statemachine.properties">
         <propertyTab
               label="Base"
               category="default"
               id="Base">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.xtext.example.fowlerdsl.statemachine.properties">
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.properties.sections.PropertiesEditionSection"
               id="org.eclipse.xtext.example.fowlerdsl.statemachine.section.Statemachine"
               tab="Base">
             <input
                    type="org.eclipse.xtext.example.fowlerdsl.statemachine.Statemachine">
             </input>
         </propertySection>
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.properties.sections.PropertiesEditionSection"
               id="org.eclipse.xtext.example.fowlerdsl.statemachine.section.Event"
               tab="Base">
             <input
                    type="org.eclipse.xtext.example.fowlerdsl.statemachine.Event">
             </input>
         </propertySection>
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.properties.sections.PropertiesEditionSection"
               id="org.eclipse.xtext.example.fowlerdsl.statemachine.section.Command"
               tab="Base">
             <input
                    type="org.eclipse.xtext.example.fowlerdsl.statemachine.Command">
             </input>
         </propertySection>
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.properties.sections.PropertiesEditionSection"
               id="org.eclipse.xtext.example.fowlerdsl.statemachine.section.State"
               tab="Base">
             <input
                    type="org.eclipse.xtext.example.fowlerdsl.statemachine.State">
             </input>
         </propertySection>
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.properties.sections.PropertiesEditionSection"
               id="org.eclipse.xtext.example.fowlerdsl.statemachine.section.Transition"
               tab="Base">
             <input
                    type="org.eclipse.xtext.example.fowlerdsl.statemachine.Transition">
             </input>
         </propertySection>
      </propertySections>
   </extension>
 </plugin>
